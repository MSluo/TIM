<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".FirstActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:text="欢迎来到TIM"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="normal"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="让\t\t\t工\t\t\t作\t\t\t更\t\t\t高\t\t\t效"
            android:textColor="#616060"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_cricle_background"
            android:padding="30sp"></TextView>

        <Button
            android:id="@+id/login_one"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:background="#D80D37E0"
            android:text="登录"
            android:textColor="#ffffff"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="使用QQ一键登录"
            android:textColor="#D80D37E0"></TextView>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_gravity="left"
            android:padding="7sp"
            android:text="新用户注册"
            android:textColor="#D80D37E0"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:gravity="right|center"
            android:padding="7sp"
            android:text="了解TIM"
            android:textColor="#D80D37E0"></TextView>
    </LinearLayout>

</LinearLayout>